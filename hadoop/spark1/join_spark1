fileA = sc.textFile("input1/join1_FileA.txt")

fileA.collect()

fileB = sc.textFile("input1/join1_FileB.txt")

fileB.collect()

def split_fileA(line):
    # separar la linea en una palabra y contador
    s = line.split(",")
    word = s[0]
    count = s[1]
    # convertir contador en int
    count = int(count)  
    return (word, count)

test_line = "able,991"

split_fileA(test_line)

fileA_data = fileA.map(split_fileA)
fileA_data.collect()

def split_fileB(line):
    # separa la linea de entrada en palabra, fecha y contador
    s = line.split(",")
    count_string = s[1]
    ss = s[0].split(" ")
    word = ss[1]
    date = ss[0]
    return (word, date + " " + count_string) 

fileB_data = fileB.map(split_fileB)
fileB_data.collect()

fileB_joined_fileA = fileB_data.join(fileA_data)
fileB_joined_fileA.collect()
